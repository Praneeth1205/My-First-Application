<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:padding="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/name_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Category Quiz Name"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_quiz"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@id/name_quiz"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ipl" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_quiz"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/image_quiz"
            android:background="#DFD7D7">

            <ImageView
                android:id="@+id/trophy"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:scaleType="fitXY"
                android:src="@drawable/trophy" />

            <TextView
                android:id="@+id/play_win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/trophy"
                android:text="Play &amp; Win:"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/coins_live_quiz"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/play_win"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/winning_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/coins_live_quiz"
                android:text="7000"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:maxLines="1"
                android:textStyle="bold" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/online"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/image_quiz"
            android:src="@drawable/online" />


        <TextView
            android:id="@+id/noOf_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_quiz"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/online"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="100 users playing"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginTop="13dp">


            <TextView
                android:id="@+id/entry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_quiz"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:text="Entry:"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/entry_fee_coins"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@id/image_quiz"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/entry_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_quiz"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:text="100"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal" />




        </LinearLayout>

        <Button
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/relative"
            android:layout_alignParentEnd="true"
            android:text="Play Now"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@drawable/input_back"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>