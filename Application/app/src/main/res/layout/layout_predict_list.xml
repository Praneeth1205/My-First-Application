<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:padding="15dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/name_predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Category Name"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_predict"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_predict_one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/participant_one_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_predict_one"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:text="Name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="VS"
                android:textAllCaps="true"
                android:textStyle="normal"
                android:textColor="#575353"
                android:textSize="12sp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_predict_two"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/participant_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_predict_two"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:maxLines="2"
                android:text="Name"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/online_predict"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:layout_below="@id/relative"
            android:src="@drawable/online" />

        <TextView
            android:id="@+id/noOf_users_predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/online_predict"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"
            android:text="100 users playing"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />



        <TextView
            android:id="@+id/predict_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/relative"
            android:layout_below="@id/name_predict"
            android:text="Predict &amp; Win:"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/coins_live_predict"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/predict_win"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/relative"
            android:src="@drawable/coins" />

        <TextView
            android:id="@+id/winning_coins_predict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/predict_win"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/coins_live_predict"
            android:maxLines="1"
            android:text="7000"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginTop="13dp">


            <TextView
                android:id="@+id/entry_predict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_quiz"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:text="Entry:"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_below="@id/image_quiz"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/entry_fee_predict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"
                android:text="100"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal" />




        </LinearLayout>


        <Button
            android:id="@+id/join_now"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Join Now"
            android:textSize="12sp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:background="@drawable/input_back"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/winning_coins_predict"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>