<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redbackground"
    android:orientation="vertical"
    tools:context=".InstructionActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="7dp"
        android:src="@drawable/logout_arrow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/back_border">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_first_participant"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ipl"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/p_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/image_first_participant"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="VS"
            android:textColor="#BFA8A8"
            android:textSize="12sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_second_participant"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ipl"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/p_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/image_second_participant"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/tickmarkone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/verified"
            />

        <TextView
            android:id="@+id/prize_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tickmarkone"
            android:text="Prize 2000 coins"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/tickmarktwo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@id/tickmarkone"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/verified"
            />

        <TextView
            android:id="@+id/total_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tickmarktwo"
            android:text="Total questions: 5 questions"
            android:textColor="@color/white"
            android:layout_below="@+id/tickmarkone"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/tickmarkthree"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="2dp"
            android:layout_below="@id/tickmarktwo"
            android:layout_marginTop="20dp"
            android:src="@drawable/verified"
            />
        <TextView
            android:id="@+id/entry_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tickmarkthree"
            android:text="Entry Fee"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:layout_below="@id/tickmarktwo"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"/>

    </RelativeLayout>

    <Button
        android:id="@+id/start_predict_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Start Prediction"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_back"
        android:backgroundTint="@color/white"
        android:textStyle="normal"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/view_predict_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/white_underline"
        android:maxLines="1"
        android:text="Game Rules"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>