<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/name_quiz_instruct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:text="Name"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/back_border">

        <ImageView
            android:id="@+id/image_quiz_instruct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/ipl" />

        <TextView
            android:id="@+id/predict_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_quiz_instruct"
            android:text="Play &amp; Win"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/coins_live_instruct"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/predict_win"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/image_quiz_instruct"
            android:src="@drawable/coins" />

        <TextView
            android:id="@+id/winning_coins_instruct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/predict_win"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/coins_live_instruct"
            android:maxLines="1"
            android:text="7000"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_ranking_breakup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/winning_coins_instruct"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/image_quiz_instruct"
            android:background="@drawable/white_underline"
            android:maxLines="1"
            android:text="View Rank Breakup"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>



</LinearLayout>