<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6D4ED"
    android:orientation="vertical"
    tools:context=".fragments.ReferEarnFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4BFBF">

        <TextView
            android:id="@+id/txt"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="@string/refer_head"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_below="@id/txt"
            android:layout_marginLeft="15dp"
            android:src="@drawable/invitefrds"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="@string/refer_rules"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="gravity"
        />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Start inviting Now"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/invite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/invite"/>


</LinearLayout>