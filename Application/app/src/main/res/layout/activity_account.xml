<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back_btn_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:layout_toRightOf="@id/back_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_btn"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_edit"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile"
            app:civ_border_width="2dp"
            android:cropToPadding="true"
            app:civ_border_color="@color/black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/updatePicBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:background="@drawable/input"
            android:backgroundTint="@color/blue"
            android:clickable="true"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
             />



        <EditText
            android:id="@+id/userName_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/input"
            android:hint="Username"
            android:inputType="text"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textColorHint="#716F6F"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/phone_number_acc"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input"
            android:hint="Enter Phone Number"
            android:inputType="phone"
            android:maxLength="10"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:paddingLeft="5dp"
            android:textColorHint="#716F6F"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input"
            android:hint="Email"
            android:paddingLeft="5dp"
            android:inputType="textEmailAddress"
            android:textAllCaps="false"
            android:maxLength="10"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textColorHint="#716F6F"
            android:textSize="20sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/panNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input"
            android:hint="PAN"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:maxLength="10"
            android:textAlignment="gravity"
            android:textColor="@color/black"
            android:textColorHint="#716F6F"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="bold" />


        <Button
            android:id="@+id/save_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_back"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="100dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textColor="@color/black"/>



    </LinearLayout>


</RelativeLayout>